    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Custmer Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustmorName)
        </dd>

        <dt>
            @Html.DisplayName("Custmer Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustmorEmail)
        </dd>

        <dt>
